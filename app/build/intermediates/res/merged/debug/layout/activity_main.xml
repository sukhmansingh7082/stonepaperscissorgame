<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="my.firstapp.sukh.MainActivity"
    android:background="@drawable/back4id"
    android:id="@+id/play1">

    <TextView
        android:id="@+id/p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player1"
        android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#625B5B"
            android:shadowRadius="1.5"
            android:shadowDx="1"
            android:shadowDy="1" />

        <ImageView
            android:id="@+id/sci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/p1"
            android:src="@drawable/sci" />

      

        <ImageView
            android:id="@+id/stonee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/p1"
            android:src="@drawable/stonee" />

        <ImageView
            android:id="@+id/popo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/sci"
            android:layout_centerHorizontal="true"
            android:src="@drawable/popo" />

        <ImageView
            android:id="@+id/popo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/popo"
            android:layout_alignTop="@+id/sci1"
            android:clickable="true"
            android:src="@drawable/popo" />

        <ImageView
            android:id="@+id/stonee1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/stonee"
            android:layout_alignTop="@+id/popo1"
            android:clickable="true"
            android:src="@drawable/stonee" />

        <TextView
            android:id="@+id/p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sci"
            android:layout_below="@+id/popo"
            android:layout_marginTop="28dp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:text="@string/player2"
            android:textColor="#625B5B"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/sci1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/p2"
            android:layout_below="@+id/p2"
            android:src="@drawable/sci" />

        <Button
            android:id="@+id/click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/popo1"
            android:layout_marginTop="32dp"
            android:clickable="true"
            android:text="@string/result" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/popo"
        android:layout_toEndOf="@+id/popo"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player2"
        android:layout_alignTop="@+id/p2"
        android:layout_alignLeft="@+id/player1"
        android:layout_alignStart="@+id/player1" />


</RelativeLayout>